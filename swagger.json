{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Movnet API Documentation",
    "description": "Documentation for the Movnet backend API"
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
