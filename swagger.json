  "paths": {
    "/event": {
      "post": {
        "description": "Creates a new event",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "name",
            "type": "string",
            "required": true
          },
          {
            "name": "showtime_id",
            "type": "number",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created event",
            "schema": {
              "$ref": "#/definitions/Event"
            }
          },
          "400": {
            "description": "Failed to create event, user input error"
          }
        }
      }
    }
  },
